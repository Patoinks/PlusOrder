<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:paddingVertical="15dp"
    android:elevation="5dp"
    android:paddingBottom="50dp"
    android:background="@drawable/rounded_corners"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/nomePrato"
        style="@style/POTextViewStyle"
        android:layout_width="208dp"
        android:layout_height="16dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/poppins_black"
        android:text="Clique para mais informações"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.901"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/preco"
        style="@style/POTextViewStyle"
        android:layout_width="114dp"
        android:layout_height="25dp"
        android:layout_marginStart="62dp"
        android:fontFamily="@font/poppins_normal"
        android:text="10"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toEndOf="@+id/nome1Prato"
        app:layout_constraintStart_toStartOf="@+id/nome1Prato"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.455" />

    <TextView
        android:id="@+id/nome1Prato"
        style="@style/POTextViewStyle"
        android:layout_width="66dp"
        android:layout_height="22dp"
        android:layout_marginBottom="56dp"
        android:fontFamily="@font/poppins_normal"
        android:text="Preço:"
        android:textAlignment="textStart"
        android:textColor="@color/azul"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/ImagemPrato" />

    <TextView
        android:id="@+id/Tempo"
        style="@style/POTextViewStyle"
        android:layout_width="117dp"
        android:layout_height="44dp"
        android:layout_marginStart="119dp"
        android:fontFamily="@font/poppins_normal"
        android:paddingTop="8dp"
        android:text="10"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/ImagemPrato"
        app:layout_constraintStart_toStartOf="@+id/nome1Prato2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.849" />

    <TextView
        android:id="@+id/nome1Prato2"
        style="@style/POTextViewStyle"
        android:layout_width="111dp"
        android:layout_height="38dp"
        android:layout_marginLeft="6dp"
        android:fontFamily="@font/poppins_normal"
        android:paddingTop="8dp"
        android:text="Preparação:"
        android:textAlignment="textStart"
        android:textColor="@color/azul"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toEndOf="@+id/ImagemPrato"
        app:layout_constraintTop_toBottomOf="@+id/nome1Prato"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ImagemPrato"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="4dp"
        android:elevation="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ImageView.Corner" />

    <TextView
        android:id="@+id/NomePrato"
        style="@style/POTextViewStyle"
        android:layout_width="match_parent"
        android:paddingLeft="135dp"
        android:layout_height="35dp"
        android:fontFamily="@font/poppins_black"
        android:text="Prato"
        android:textAlignment="textStart"
        android:textColor="@color/azul"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

</androidx.constraintlayout.widget.ConstraintLayout>